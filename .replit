[workflows]
runButton = "Zabbix Manager"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Zabbix Manager (Headless)"

[[workflows.workflow.tasks]]
